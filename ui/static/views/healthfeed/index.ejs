
<h2>Updates</h2>

<% if (notifications.length === 0) { %>
  <em>no notifications</em>
<% } %>

<% for (var i=0; i<notifications.length; i++) { %>
  <div class="notification" style="padding-top: 20px;">
    <blockquote class="content">
      <%= notifications[i].content %>
    </blockquote>

    <% if (notifications[i].document !== null) { %>
      [<a href="/records/<%= notifications[i].record.id %>/documents/<%= notifications[i].document.id %>" class="goto_document">go</a>]
    <% } %>

    <!-- Warning: don't use record_id in the id attr!! Issue with JQuery UI record tab panels!! -->
    <div class="details" style="font-family: 'lucida sans', 'lucida grande', sans-serif; font-style: oblique; margin: 10px 0 0 5px">
      &nbsp;&ndash; sent by <%= notifications[i].sender %> 
      on
      <span class="created_at">
        <%= notifications[i].received_at.substring(0,10) %>
      </span>
    </div>
  </div>
<% } %>

<br /><br /><br />
